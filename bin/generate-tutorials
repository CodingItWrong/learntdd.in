system("bin/log2blog generate learn-tdd-in/laravel c03e62ca11d418eb18e4b0048d874df2f2419215 --token $GITHUB_OAUTH_TOKEN --skip composer.lock > laravel/_commits.md")

puts "rails"
system("bin/log2blog generate learn-tdd-in/rails 576c89e3ed6ad2d45f2ca78797b42518c5231a4e --token $GITHUB_OAUTH_TOKEN --skip db/schema.rb > rails/_commits.md")
